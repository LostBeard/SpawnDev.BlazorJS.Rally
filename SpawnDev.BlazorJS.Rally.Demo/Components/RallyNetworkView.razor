    bool _updating = false;
    bool _firstUpdate = true;

    async Task UpdateData(VisNetworkView visNetwork)
    {
        if (_netVis == null) return;
        if (_updating) return;
        _updating = true;
        if (_firstUpdate)
        {
            _firstUpdate = false;
            JS.Set("_networkData", _netVis.NetworkData);
        }
        try
        {
            var nodeIds = new List<string> { rootNode.Id };
            var edgeIds = new List<string>();
            rootNode.Label = $"{RallyService.PeerId}\n{GetSignerHexKeyFingerprint(DeviceIdentityService.PublicSigningKeyHex)}";
            var rootNodeColor = GetColor(DeviceIdentityService.PublicSigningKeyHex);
            rootNode.Color!.Border = rootNodeColor;
            rootNode.BorderWidth = 4;
            _netVis.Nodes!.Update(rootNode);
            foreach (RallyPoint rallyPoint in RallyService.RallyPoints)
            {
                var (torrentNode, torrentToRootEdge) = AddOrUpdateNodeTorrent(rallyPoint);
                nodeIds.Add(torrentNode.Id);
                edgeIds.Add(torrentToRootEdge.Id!);
                var wires = rallyPoint.ConnectingOrConnectedPeers;
                foreach (RallyPeer wire in wires)
                {
                    var (wireNode, wireToTorrentEdge) = AddOrUpdateNodeWire(
                        wire.OfferId,
                        wire.RemotePeerId,
                        wire.RemoteSignerKeyHex,
                        wire.SignalerUrl,
                        wire.InfoHash,
                        wire.Initiator,
                        wire.Connecting,
                        wire.Connected,
                        wire.SignalReceived
                    );
                    nodeIds.Add(wireNode.Id);
                    edgeIds.Add(wireToTorrentEdge.Id!);
                }
                foreach (var wire in wires)
                {
                    foreach (var info in wire.ConnectionInfos)
                    {
                        if (info.PeerId == RallyService.PeerId) continue;
                        var isConnectedOrConnecting = wires.Any(o => o.RemotePeerId == info.PeerId);
                        if (isConnectedOrConnecting) continue;
                        var (wireNode, wireToTorrentEdge) = AddOrUpdateNodeWire(
                            "",
                            info.PeerId,
                            info.SignerKeyHex,
                            info.SignalerUrl,
                            rallyPoint.InfoHash,
                            false,
                            false,
                            false,
                            false
                        );
                        nodeIds.Add(wireNode.Id);
                        edgeIds.Add(wireToTorrentEdge.Id!);
                    }
                }
            }
            var removedNodeIds = _netVis!.Nodes!.GetIds().Except(nodeIds).ToList();
            var removedEdgeIds = _netVis!.Edges!.GetIds().Except(edgeIds).ToList();
            if (removedNodeIds.Count > 0) _netVis.Nodes.Remove(removedNodeIds);
            if (removedEdgeIds.Count > 0) _netVis.Edges.Remove(removedEdgeIds);
        }
        catch (Exception ex)
        {
            JS.Log("PeerView.UpdateData error:" + ex.ToString());
        }
        finally
        {
            _updating = false;
        }
    }
