    (VisNode, VisEdge) AddOrUpdateNodeWire(string offerId, string remotePeerId, string remotePeerIdSignerHex, string signalerUrl, string infoHash, bool isInitiator, bool connecting, bool connected, bool signalReceived)
    {
        // var remotePeerIdSignerHex = rallyPeer.RemoteSignerKeyHex;
        // var remotePeerId = rallyPeer.RemotePeerId;
        // var connecting = rallyPeer.Connecting;
        // var connected = rallyPeer.Connected;
        var edgeToId = infoHash;
        var nodeId = string.IsNullOrEmpty(offerId) ? $"{infoHash},{remotePeerId}" : $"{infoHash},{offerId}";
        var edgeId = $"{nodeId}>>{edgeToId}";
        var node = _netVis!.Nodes!.Get(nodeId);
        var downloadSpeed = 0;// wire.DownloadSpeed();
        var uploadSpeed = 0;//wire.UploadSpeed();
        var downloading = downloadSpeed > 0d;
        var uploading = uploadSpeed > 0d;
        float totalPieces = 0;//torrent.Bitfield?.Length ?? 0;
        float donePieces = 0;//isSeeder ? totalPieces : wire.PeerPieces?.PopCount() ?? 0;
        var percentDone = totalPieces == 0 ? 0 : donePieces / totalPieces;
        var RemoteAddress = "";// wire.RemoteAddress ?? "";
        var baseName = !string.IsNullOrEmpty(RemoteAddress) ? RemoteAddress : remotePeerId;
        var percentDoneStr = Math.Round(percentDone * 100f, 2) + $"% ({donePieces}/{totalPieces})";
        baseName += $" - {percentDoneStr}";
        var nodeLabel = $"{offerId}\n{remotePeerId}\n{signalerUrl}\n{GetSignerHexKeyFingerprint(remotePeerIdSignerHex)}";
        var peerColor = GetColor(remotePeerIdSignerHex);
        if (node == null)
        {
            node = new VisNode
            {
                Id = nodeId,
                Label = nodeLabel,
                Shape = "circularImage",
                Image = GetImage("peer"),
                Font = isInitiator ? onlineNodeFont : offlineNodeFont,
                Color = new VisNodeColor
                {
                    Border = peerColor,
                    Background = "#222222",
                },
                Opacity = connected ? 1.0f : 0.5f,
                Tag = "wire",
                BorderWidth = 4,
                Title = "Double click to disconnect the peer",
            };
        }
        else
        {
            node.Label = nodeLabel;
            node.Font = isInitiator ? onlineNodeFont : offlineNodeFont;
            node.Color!.Border = peerColor;
            node.Opacity = connected ? 1.0f : 0.5f;
            node.BorderWidth = 4;
        }
        _netVis!.Nodes.Update(node);
        // to torrent edge
        var color = "";
        if (connected)
        {
            color = "#ffffff";
        }
        else if (signalReceived)
        {
            color = "#00ff00";
        }
        else if (connecting)
        {
            color = "#ffff00";
        }
        else
        {
            color = "#550000";
        }
        var edge = _netVis!.Edges!.Get(edgeId);
        if (edge == null)
        {
            edge = new VisEdge
            {
                Id = edgeId,
                From = nodeId,
                To = edgeToId,
                Dashes = !connected,
                //Label = edgeLabel,
                Color = new VisEdgeColor
                {
                    Color = color,
                },
                // Background = new VisEdgeBackground
                // {
                //     Color = "#ff00ff",
                //     Enabled = true,
                //     Size = 10,
                // },
                Width = isInitiator ? 6 : 2,
                Arrows = new VisEdgeArrows
                {
                    From = new VisEdgeArrowOptions { Enabled = uploading, },
                    To = new VisEdgeArrowOptions { Enabled = downloading, },
                },
            };
        }
        else
        {
            //edge.Label = edgeLabel;
            edge.Dashes = !connected;
            edge.Color!.Color = color;
            edge.Width = isInitiator ? 6 : 2;
            edge.Arrows!.From!.Enabled = uploading;
            edge.Arrows!.To!.Enabled = downloading;
        }
        _netVis!.Edges.Update(edge);
        return (node, edge);
    }
